<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:background="#eeeeee"
    tools:context=".QaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        tools:context=".QaActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="550dp">




            <ImageView
                android:id="@+id/back_buttom1"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_back"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/qa1"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/qa1"
                android:layout_below="@+id/back_buttom1"
                />
            <ImageView
                android:id="@+id/qa2"
                android:layout_width="353dp"
                android:layout_height="300dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/qa2"
                android:layout_below="@+id/qa1"
                android:layout_marginTop="-100dp"
                />
            <ImageView
                android:id="@+id/qa3"
                android:layout_width="353dp"
                android:layout_height="300dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/qa3"
                android:layout_below="@+id/qa2"
                android:layout_marginTop="-200dp"
                />


        </RelativeLayout>
    </ScrollView>
</FrameLayout>