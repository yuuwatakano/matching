<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    tools:context=".AccountPageFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        tools:context=".AccountPageFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/no_images"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="40dp"
                    android:src="@drawable/ic_casset"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <ImageView
                    android:id="@+id/iconImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/nameText"
                android:layout_width="410dp"
                android:layout_height="50dp"
                android:layout_below="@+id/card"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:gravity="center_horizontal"
                app:autoSizeTextType="uniform" />

            <ImageView
                android:id="@+id/place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameText"
                android:layout_toLeftOf="@+id/addressText"
                android:src="@drawable/ic_baseline_place" />

            <TextView
                android:id="@+id/addressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameText"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="addressText"
                app:autoSizeTextType="uniform" />


            <ImageView
                android:id="@+id/genreicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addressText"
                android:layout_marginTop="20dp"
                android:layout_toLeftOf="@+id/addressText"
                android:src="@drawable/ic_baseline_music_note" />

            <TextView
                android:id="@+id/genreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addressText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/genreicon"
                android:gravity="center_horizontal" />

            <ImageView
                android:id="@+id/skillicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/genreText"
                android:layout_marginTop="20dp"
                android:layout_toLeftOf="@+id/addressText"
                android:src="@drawable/ic_baseline_brush" />

            <TextView
                android:id="@+id/skillText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/genreText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/skillicon"
                android:gravity="center_horizontal" />

            <ImageView
                android:id="@+id/profileText_info1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/skillText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:src="@drawable/ic_profile" />

            <TextView
                android:id="@+id/profileText"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/skillText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"

                />


            <ImageView
                android:id="@+id/twitter_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/profileText"
                android:layout_marginTop="40dp"
                android:layout_marginRight="30dp"
                android:layout_toLeftOf="@+id/instagram_button"
                android:src="@drawable/ic_twitter_logo___blue"
                android:text="twitter" />

            <ImageView
                android:id="@+id/instagram_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/profileText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:src="@drawable/ic_insta"
                android:text="instagram" />

            <ImageView
                android:id="@+id/soundcloud_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/profileText"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/instagram_button"
                android:src="@drawable/ic_soundcloud"
                android:text="soundcloud" />


            <ImageView
                android:id="@+id/match_send_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/instagram_button"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_matchi_sending"
                android:text="マッチング申請ボタン" />


            <ImageView
                android:id="@+id/match_send_cansel_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/instagram_button"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_match_send_blue"
                android:text="マッチング申請取り消しボタン" />

            <ImageView
                android:id="@+id/match_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/instagram_button"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_matching"
                android:text="マッチング承認ボタン" />

            <ImageView
                android:id="@+id/match_delete_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/instagram_button"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_match_send_cancel"
                android:text="マッチング解除" />


        </RelativeLayout>
    </ScrollView>
</FrameLayout>